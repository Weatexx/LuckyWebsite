@model holiganbet.Models.AdminViewModels.LoginsVM

<!-- Modal -->
<div class="modal fade" id="exampleModal" data-easein="fadeIn" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #121623;">
                <h1 class="modal-title fs-5 ms-auto" id="exampleModalLabelCenter" style="color: white;">Hoşgeldiniz</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                    style="background-color: white !important;"></button>
            </div>
            <form class="modal-body" method="post">
                @Html.AntiForgeryToken()
                <div class="input">
                    <p class=""><span style="color: red;">*</span>Kullanıcı Adı</p>
                    <input type="text" asp-for="Username" class="form-control"
                        placeholder="Lütfen kullanıcı adınızı giriniz." aria-label="Username"
                        aria-describedby="basic-addon1">
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <p class="mt-4"><span style="color: red;">*</span>Şifre</p>
                    <input type="text" asp-for="Password" class="form-control" placeholder="Lütfen şifrenizi giriniz."
                        aria-label="Username" aria-describedby="basic-addon1">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mt-5">
                    <p style="font-size: 14px;">Güncel adresimiz <strong>www.holiganbet936.com</strong>'dur. Bir sonraki
                        güncellemede adresimiz <strong>www.holiganbet937.com</strong> olacaktır. Her zaman güncel adres
                        için: <a href="#" style="color: cadetblue;">bit.ly/holigiris</a> yazıp giriş yapabilirsiniz!</p>
                </div>
                <div class="social-media justify-content-center d-flex">
                    <a href="#"><img src="img/footerimg/WhatsApp.png" class="mx-1" style="width: 30px;"> </img></a>
                    <a href="#"><img src="img/footerimg/Telegram.png" class="mx-1" style="width: 30px;"></img></a>
                    <a href="#"><img src="img/social/telefon.png" class="mx-1" style="width: 30px;"></img></a>
                    <a href="#"><img src="img/social/musterihizmetleri.png" class="mx-1" style="width: 30px;"></img></a>
                    <a href="#"><img src="img/social/x.png" class="mx-1" style="width: 30px;"></img></a>
                    <a href="#"><img src="img/footerimg/instagram.png" class="mx-1" style="width: 30px;"></img></a>
                    <a href="#"><img src="img/social/vk.png" class="mx-1" style="width: 30px;"></img></a>
                </div>
                <div class="mt-4 justify-content-center d-flex">
                    <button type="submit" class="btn modalBtn"
                        style="background-color: #FFD43B; color: black; padding: 2% 15% 2% 15%;">Giriş Yap</button>
                    <br>
                </div>
                <div class="justify-content-center d-flex">
                    <a class="mt-3 passwordBtn" href="#" style="text-decoration: none; color: gray;">Şifremi Unuttum</a>
                </div>
            </form>
        </div>
    </div>
</div>